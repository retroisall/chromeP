{
  "manifest_version": 3,
  "name": "Google Sheets 留言助手",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["https://script.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}